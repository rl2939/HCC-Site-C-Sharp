                    }
                    <h3 style="font-size:small">
                        @staff.title
                    </h3>
                    <h3 style="font-size:small">
                        @staff.interestArea
                    </h3>
                    <h3 style="font-size:small">
                        @staff.office
                    </h3>
                    @if (staff.website != "")
                    {
                        <h3 style="font-size:small">
                            Webiste: @staff.website
                        </h3>
                    }
                    @if (staff.phone != "")
                    {
                        <h3 style="font-size:small">
                            Phone: @staff.phone
                        </h3>
                    }
                    @if (staff.email != "")
                    {
                        <h3 style="font-size:small">
                            Email: @staff.email
                        </h3>
                    }
                    @if (staff.twitter != "")
                    {
                        <h3 style="font-size:small">
                            Twitter: @staff.twitter
                        </h3>
                    }
                    @if (staff.facebook != "")
                    {
                        <h3 style="font-size:small">
                            Facebook: @staff.facebook
                        </h3>
                    }
                </div>
            }
        </div>
    </div>
