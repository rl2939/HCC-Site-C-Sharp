            <li><a href="#facAcc">Faculty</a></li>
            <li><a href="#staffAcc">Staff</a></li>
        </ul>
        <div id="facAcc">
            <h2>Faculty</h2>
            <!-- This next section is incomplete, add the rest of the items-->
            @foreach (var faculty in Model.faculty)
            {
                <div class="person">
                    <img src="@faculty.imagePath" alt="pic" />
                    <h3 style="font-size:small">
                        @faculty.name
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.username
                    </h3>
                    @if (faculty.tagline != "")
                    {
                        <h3 style="font-size:small">
                            @faculty.tagline
                        </h3>   
                    }
                    <h3 style="font-size:small">
                        @faculty.title
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.interestArea
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.office
                    </h3>
                    @if (faculty.website != "")
                    {
                        <h3 style="font-size:small">
                            Webiste: @faculty.website
                        </h3>
                    }
                    @if (faculty.phone != "")
                    {
                        <h3 style="font-size:small">
                            Phone: @faculty.phone
                        </h3> 
                    }
                    @if (faculty.email != "")
                    {
                    <h3 style="font-size:small">
                            Email: @faculty.email
                    </h3>
                    }
                    @if (faculty.twitter != "")
                    {
                        <h3 style="font-size:small">
                            Twitter: @faculty.twitter
                        </h3>
                    }
                    @if (faculty.facebook != "")
                    {
                        <h3 style="font-size:small">
                            Facebook: @faculty.facebook
                        </h3>
                    }
                </div>
            }
        </div>
        <div id="staffAcc">
            <h2>Staff</h2>
            <!-- TODO: add staff stuff-->
            @foreach (var staff in Model.staff)
            {
                <div class="person">
                    <img src="@staff.imagePath" alt="pic" />
                    <h3 style="font-size:small">
                        @staff.name
                    </h3>
                    <h3 style="font-size:small">
                        @staff.username
                    </h3>
                    @if (staff.tagline != "")
                    {
                        <h3 style="font-size:small">
                            @staff.tagline
